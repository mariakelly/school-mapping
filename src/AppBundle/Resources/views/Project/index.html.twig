{% extends '::base.html.twig' %}

{% block body -%}
    <h1>View all Projects</h1>

    <table class="table table-striped table-hover records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Description</th>
                <th>Website</th>
                <th>Isfeatured</th>
                <th>Isdistrictwide</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('admin_projects_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.name }}</td>
                <td>{{ entity.description }}</td>
                <td>{{ entity.website }}</td>
                <td>{{ entity.isFeatured }}</td>
                <td>{{ entity.isDistrictWide }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('admin_projects_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('admin_projects_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <a class="btn btn-primary pull-right" href="{{ path('admin_projects_new') }}">
        Add a New Project
    </a>
    {% endblock %}
