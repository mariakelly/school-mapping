{% extends '::base.html.twig' %}

{% block body %}
    <h1>Project</h1>

    <table class="table table-striped table-bordered record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ entity.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ entity.description }}</td>
            </tr>
            <tr>
                <th>Website</th>
                <td>{{ entity.website }}</td>
            </tr>
            <tr>
                <th>Isfeatured</th>
                <td>{{ entity.isFeatured }}</td>
            </tr>
            <tr>
                <th>Isdistrictwide</th>
                <td>{{ entity.isDistrictWide }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('admin_projects') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('admin_projects_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
</ul>

    {% if is_granted('ROLE_SUPER_ADMIN') %}
        <br><br>
        <hr>
        {{ form(delete_form) }}
    {% endif %}

{% endblock %}
