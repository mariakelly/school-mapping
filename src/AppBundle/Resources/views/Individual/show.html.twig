{% extends '::base.html.twig' %}

{% block body %}
    <a class="btn btn-xs btn-primary pull-right" href="{{ path('admin_home') }}">
        &laquo; Return to Dashboard
    </a>
    <h1>View Person Details</h1>

    <table class="table table-striped table-bordered record_properties">
        <tbody>
            <tr>
                <th>Name</th>
                <td>{{ entity.name }}</td>
            </tr>
            <tr>
                <th>Website</th>
                <td>{{ entity.website }}</td>
            </tr>
        </tbody>
    </table>
    {% if is_granted('ROLE_ADMIN') %}
    <a class="btn btn-primary pull-right" href="{{ path('admin_people_edit', { 'id': entity.id }) }}">
        Edit
    </a>
    {% endif %}
    {% if delete_form is defined and is_granted('ROLE_SUPER_ADMIN') %}
        <br><br>
        <hr>
        {{ form(delete_form) }}
    {% endif %}

{% endblock %}
